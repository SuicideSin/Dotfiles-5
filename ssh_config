# Rescomp Hosts
Host *.rescomp.berkeley.edu *.housing.berkeley.edu
    User jitl
    IdentityFile ~/.ssh/id_rsa.wopr

Host stargate stargate.housing.berkeley.edu cardiff
    ForwardAgent yes
    ControlPath ~/.ssh/controlmasters/%r@%h:%p
    ControlMaster auto

# Bastion rescomp hosts
Host dev-* architect devbox dev4 dev
    ProxyCommand ssh stargate.housing.berkeley.edu nc %h %p
    ForwardAgent yes
    DynamicForward 9001

# rescomp-only settings for public hosts
Host github
    Hostname github.com
    User git
    IdentityFile ~/.ssh/id_rsa.hal

Host resgit
    Hostname git.rescomp.berkeley.edu
    User gitolite3
    IdentityFile ~/.ssh/id_rsa_git

# Other hosts
Host nomcopter
    Hostname nomcopter.com
    User justjake
    Port 484

Host teevee teevee.internal
    Hostname teevee.internal
    User jitl
