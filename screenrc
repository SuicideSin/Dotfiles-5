startup_message off

# Get some status up in here!

hardstatus alwayslastline "%{=b}%{G} %{b}%w %=%{kG}%C%A  %D, %M/%d/%Y "

vbell_msg " --- DA HERRO !!! --- "
bell_msg " Bell in GNU screen window %n "

# Scrollback
defscrollback 10000
